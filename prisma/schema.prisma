generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model albums {
  id     Int     @id @default(autoincrement())
  name   String  @db.VarChar(200)
  artist String  @db.VarChar(100)
  rating Decimal @db.Decimal
  critic String?
}

model artist {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(200)
}

model movies {
  id     Int     @id @default(autoincrement())
  name   String  @db.VarChar(200)
  artist String  @db.VarChar(100)
  rating Decimal @db.Decimal
  critic String?
}
